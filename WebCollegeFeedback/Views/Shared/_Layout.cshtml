<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - College Feedback System</title>
    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@
    <link rel="stylesheet" href="~/Content/bootstrap.css" media="screen">
    <link rel="stylesheet" href="~/Content/Site.css" media="screen">
    @RenderSection("Styles", false)
</head>
<body>
    <div class="col-md-11 col-xs-11 text-center m-5">
        <h1>College Feedback system</h1>
    </div>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li>@Html.ActionLink("College Management", "AddCollege", "Colleges", null, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })</li>
                }
                else
                {
                    <li>@Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })</li>
                }
            </ul>
            <ul class="navbar-nav float-right">
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a class="nav-link active">Hello - @User.Identity.Name</a></li>
                    <li>@Html.ActionLink("Logout", "Logout", "Account", null, new { @class = "nav-link  active text-warning" })</li>
                }
                else
                {
                    <li class="nav-item dropdown dropleft">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Login</a>
                        <div class="dropdown-menu">
                            @Html.ActionLink("Admin Login", "Login", "Account", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Student Login", "Login", new { area = "Students", controller = "Accounts" }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Freshere Login", "Login", new { Area = "Freshers", Controller = "Accounts" }, new { @class = "dropdown-item" })
                        </div>
                    </li>

                }
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @*<script src="https://bootswatch.com/_vendor/jquery/dist/jquery.min.js"></script>*@
    <script src="https://bootswatch.com/_vendor/popper.js/dist/umd/popper.min.js"></script>
    <script src="https://bootswatch.com/_vendor/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="https://bootswatch.com/_assets/js/custom.js"></script>

    @*@Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
</body>
</html>
